{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "Customer"
    ],
    "properties": {
        "Customer": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Customer_Name": {
						"description":"First and last name of the customer",
                        "type": "string"
                    },
                    "Customer_Address": {
						"description":"The street and the number, e.g. 19 liberty avenu",
                        "type": "string"
                    },
                    "Customer_City": {
						"description":"The city and state initial, e.g. New York NY",
                        "type": "string"
                    },
                    "Customer_PostalCode": {
						"description":"Postal code and country, e.g. 10461 USA",
                        "type": "string"
                    },
                    "Customer_PhoneNumber": {
                        "type": "string",
						"pattern":"([0-9]{2})-([0-9]{2})-([0-9]{2})-([0-9]{2})-([0-9]{2})",
						"minItems": 1
                    },
                    "Customer_email": {
                        "type": "string"
                    }
                },
                "required": [
                    "Customer_Address",
                    "Customer_City",
                    "Customer_email",
                    "Customer_Name"
                ],
				"dependencies":{"Customer_email":["Customer_PhoneNumber"]}
            }
        }
    }
}