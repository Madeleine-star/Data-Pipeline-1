{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "Customer"
    ],
    "properties": {
        "Customer": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Customer_Name": {
						"description":"First and last name of the customer",
                        "type": "string"
                    },
                    "Customer_Address": {
						"description":"The street and the number, e.g. 19 liberty avenu",
                        "type": "string"
                    },
                    "Customer_City": {
						"description":"The city and state initial, e.g. New York NY",
                        "type": "string"
                    },
                    "Customer_PostalCode": {
						"description":"Postal code and country, e.g. 10461 USA",
                        "type": "string"
                    },
                    "Customer_PhoneNumber": {
						"description": "Phone number of the customer, the regex expression below specific how the phone number look like. If it has Customer_email this field must be filled too",
                        "type": "string",
						"pattern":"([0-9]{2})-([0-9]{2})-([0-9]{2})-([0-9]{2})-([0-9]{2})"
                    },
                    "Customer_email": {
						"description": "Customer email address",
                        "type": "string"
                    }
                },
                "required": ["Customer_Address",
                    "Customer_City",
                    "Customer_Name"],
				"dependencies":{"Customer_email":["Customer_PhoneNumber"]}
            }
        }
    }
}