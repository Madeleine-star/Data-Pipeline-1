<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">

  <!-- Formatted output in HTML -->
  <xsl:output method="html" indent="yes"/>

  <!-- Template for the root element -->
  <xsl:template match="/Root">
    <html>
      <body>
        <!-- Main heading for the HTML document -->
        <h1>Recipe List by Category</h1>

        <!-- Loop through each unique category -->
        <xsl:for-each select="Categories[not(Categorie=preceding-sibling::Categories/Categorie)]">
          <!-- Display the category as a subheading -->
          <h2><xsl:value-of select="Categorie"/></h2>
          <ul>
            <!-- Loop through all recipes that match the current category -->
            <xsl:for-each select="//Categories[Categorie=current()/Categorie]/recipe_cat">
              <li>
                <!-- Display the recipe name without description -->
                <h3><xsl:value-of select="."/></h3>
              </li>
            </xsl:for-each>
          </ul>
        </xsl:for-each>

      </body>
    </html>
  </xsl:template>

</xsl:stylesheet>
